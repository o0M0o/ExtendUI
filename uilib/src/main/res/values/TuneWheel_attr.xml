<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TuneWheel">
        <!-- 空间方向，垂直/水平 -->
        <attr name="twOrientation">
            <enum name="vertical" value="1"/>
            <enum name="horizontal" value="2"/>
        </attr>

        <!-- 若为true则使用当前值标签 -->
        <attr name="twUseCurTag" format="boolean" />

        <!-- tag前后缀 -->
        <attr name="twPostUnit" format="string" />
        <attr name="twPrvUnit" format="string" />

        <!-- 线之间距离 -->
        <attr name="twLineDivider" format="dimension" />

        <!-- 短线数 -->
        <attr name="twShortLineCount" format="integer" />

        <!-- 长短线的长度 -->
        <attr name="twLongLineLength" format="dimension" />
        <attr name="twShortLineLength" format="dimension" />

        <!-- 最大值，最小值，当前值 -->
        <attr name="twMaxValue" format="integer" />
        <attr name="twMinValue" format="integer" />
        <attr name="twCurValue" format="integer"  />

        <!-- 字体大小 -->
        <attr name="twTextSize" format="dimension" />
    </declare-styleable>
</resources>