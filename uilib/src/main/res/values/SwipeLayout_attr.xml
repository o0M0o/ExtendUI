<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SwipeLayout">
        <!-- for swipe width -->
        <attr name="dmRightWidth" format="dimension" />

        <!-- for content/right view -->
        <attr name="idContentView" format="reference"/>
        <attr name="idRightView" format="reference"/>

        <!-- for swipe direction -->
        <attr name="fgDirection">
            <flag name="left" value="1"/>
            <flag name="right" value="2"/>
        </attr>
    </declare-styleable>
</resources>