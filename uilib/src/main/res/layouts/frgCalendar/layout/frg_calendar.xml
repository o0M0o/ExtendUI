<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/calendar_week_bg_color">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_fast_selected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_year_left"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="48dp"
                android:src="@drawable/ic_to_left"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="2018年"
                android:textColor="@color/darkslategrey"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_year_left"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_year_right"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_to_right"
                app:layout_constraintStart_toEndOf="@id/tv_year"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/iv_month_left"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_to_left"
                app:layout_constraintEnd_toStartOf="@id/tv_month"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="10月"
                android:textColor="@color/darkslategrey"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/iv_month_right"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_month_right"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginEnd="48dp"
                android:src="@drawable/ic_to_right"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/week_bar"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/calendar_week_bg_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_fast_selected">

            <TextView
                android:id="@+id/tv_w1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周一"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_w2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_w2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周二"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_w3"
                app:layout_constraintStart_toEndOf="@id/tv_w1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_w3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周三"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_w4"
                app:layout_constraintStart_toEndOf="@id/tv_w2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_w4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周四"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_w5"
                app:layout_constraintStart_toEndOf="@id/tv_w3"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_w5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周五"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_w6"
                app:layout_constraintStart_toEndOf="@id/tv_w4"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_w6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周六"
                android:textColor="#ffff725f"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_w7"
                app:layout_constraintStart_toEndOf="@id/tv_w5"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_w7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周日"
                android:textColor="#ffff725f"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_w6"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_header">

        <wxm.uilib.FrgCalendar.FrgCalendarDays
            android:id="@+id/fd_days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>