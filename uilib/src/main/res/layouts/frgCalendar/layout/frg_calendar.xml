<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/week_bar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/calendar_week_bg_color"
        android:gravity="center"
        android:orientation="horizontal" />

    <GridView
        android:id="@+id/gridview"
        app:layout_constraintTop_toBottomOf="@id/week_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center"
        android:numColumns="7" />

    <ImageView
        android:id="@+id/selected_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_shape_calendar_item_selected" />

    <TextView
        android:id="@+id/floating_month_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@android:color/black"
        android:textSize="26sp"
        android:textStyle="bold"
        android:visibility="gone" />
</android.support.constraint.ConstraintLayout >