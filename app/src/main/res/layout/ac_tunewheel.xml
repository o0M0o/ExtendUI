<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wxm.extendui.tunewheel.ACTuneWheel">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_org_h"
        android:padding="8dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_org_h_val"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/red"
            android:text="50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <wxm.uilib.tunewheel.TuneWheel
            android:id="@+id/tw_h_1"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_wheel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_org_h_val"
            app:twMinValue="0"
            app:twMaxValue="99"
            app:twCurValue="50"
            app:twLineDivider="16"
            app:twLongLineLength="16"
            app:twShortLineCount="1"
            app:twShortLineLength="8"
            app:twTextSize="9" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_org_v"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_org_h"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="96dp"
        android:layout_height="0dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintVertical_bias="0.0">


        <TextView
            android:id="@+id/tv_org_v_val"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tw_v_1"
            app:layout_constraintBottom_toBottomOf="@+id/tw_v_1"
            android:textColor="@color/red"
            android:text="50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <wxm.uilib.tunewheel.TuneWheel
            android:id="@+id/tw_v_1"
            android:layout_width="56dp"
            android:layout_height="0dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_wheel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:twUseCurTag="false"
            app:twOrientation="vertical"
            app:twMinValue="0"
            app:twMaxValue="99"
            app:twCurValue="50"
            app:twLineDivider="6"
            app:twLongLineLength="16"
            app:twShortLineCount="1"
            app:twShortLineLength="7"
            app:twTextSize="7" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_org_h1"
        android:padding="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        app:layout_constraintStart_toEndOf="@id/cl_org_v"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_org_h"
        android:layout_width="0dp"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_org_h_val1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/red"
            android:text="50m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <wxm.uilib.tunewheel.TuneWheel
            android:id="@+id/tw_h_2"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_wheel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_org_h_val1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:twPostUnit="m"
            app:twUseCurTag="false"
            app:twOrientation="horizontal"
            app:twMinValue="0"
            app:twMaxValue="99"
            app:twCurValue="50"
            app:twLineDivider="12"
            app:twLongLineLength="18"
            app:twShortLineCount="3"
            app:twShortLineLength="9"
            app:twTextSize="7" />
    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_org_h2"
        android:padding="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        app:layout_constraintStart_toEndOf="@id/cl_org_v"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_org_h1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" >


        <TextView
            android:id="@+id/tv_org_h_val2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/red"
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <wxm.uilib.tunewheel.TuneWheel
            android:id="@+id/tw_h_3"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_wheel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_org_h_val2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:twUseCurTag="false"
            app:twOrientation="horizontal"
            app:twMinValue="0"
            app:twMaxValue="6"
            app:twCurValue="3"
            app:twLineDivider="32"
            app:twLongLineLength="18"
            app:twShortLineCount="0"
            app:twShortLineLength="9"
            app:twTextSize="7" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
